            function addStat(id) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("SetPoints", "User")',
                    data: "id=" + id,
                    success: function (data) {
                        //alert("chuj");
                        var gold = parseInt($("#gold").text());
                        if (gold >= data) {
                            switch (id) {
                                case 0:
                                    var value = data;
                                    var boost = 0;
                                    $("#strBlock").html("STR: <f id='strvalue'>" + (parseInt(value)+parseInt(@Model.StatsBoost.Str)) + "</f>");
                                    $("#gstr").html(parseInt(value)+1);
                                    break;
                                case 1:
                                    var value = data;
                                    $("#agiBlock").html("AGI: <f id='agivalue'>" + (parseInt(value)+parseInt(@Model.StatsBoost.Agi)) + "</f>");
                                    $("#gagi").html(parseInt(value)+1);
                                    break;
                                case 2:
                                    var value = data;
                                    $("#vitBlock").html("VIT: <f id='vitvalue'>" + (parseInt(value)+parseInt(@Model.StatsBoost.Vit)) + "</f>");
                                    $("#gvit").html(parseInt(value)+1);
                                    break;
                                case 3:
                                    var value = data;
                                    $("#dexBlock").html("DEX: <f id='dexvalue'>" + (parseInt(value)+parseInt(@Model.StatsBoost.Dex)) + "</f>");
                                    $("#gdex").html(parseInt(value)+1);
                                    break;
                                case 4:
                                    var value = data;
                                    $("#intBlock").html("INT: <f id='intvalue'>" + (parseInt(value)+parseInt(@Model.StatsBoost.Int)) + "</f>");
                                    $("#gint").html(parseInt(value)+1);
                                    break;
                                case 5:
                                    var value = data;
                                    $("#lukBlock").html("LUK: <f id='lukvalue'>" + (parseInt(value)+parseInt(@Model.StatsBoost.Luk)) + "</f>");
                                    $("#glux").html(parseInt(value)+1);
                                    break;
                            }
                            $("#gold").html(gold - value);
                        }

                        //location.reload();
                    }
                });
            }
