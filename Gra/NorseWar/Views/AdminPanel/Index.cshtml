@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(function(){
       $(".body-content").css({ width: "980px" });
    });
</script>

<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.Editor("Login", new { htmlAttributes = new { @class = "form-control", @placeholder = "Wpisz login" } })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-10">
                @Html.Editor("Password", new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Wpisz hasło" } })

            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zaloguj" class="button success" />
            </div>
        </div>
    </div>
}