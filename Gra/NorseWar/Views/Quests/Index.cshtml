@model IEnumerable<NorseWar.Models.Quest>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<p>
    @Html.ActionLink("Stwórz", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Opis
        </th>
        <th>
           Czas trwania
        </th>
        <th>
            Doświadczenie
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeSecond)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpValue)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.Id }) 
            @Html.ActionLink("Szczegóły", "Details", new { id=item.Id }) 
            @Html.ActionLink("Usuń", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
