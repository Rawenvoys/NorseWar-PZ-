<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Norse War</title>
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/mojeStyle.css" rel="stylesheet" />
</head>
<body >


    <div id="container">
        <map name="adminClick">
            <area shape="rect" coords="281,31,291,40" href="~/AdminPanel">
        </map>
        <div id="topbar">
            <div id="topbarL">
                100 <img src="~/Content/shiny-coin2.png" width="12" height="12" />
            </div>
            <div id="topbarR">
                <img src="~/Content/logoFajne.png" width="350" height="50" usemap="#adminClick">
            </div>
        </div>

        <div id="navigation-left-bar">
            <a href="@Url.Action("Tavern", "User")"><div class="optionL">Karczma</div></a>
            <div class="optionL">Warta</div> @*todo*@
            <a href="@Url.Action("Details", "User", new { id = NorseWar.Helper.Methods.userId})"><div class="optionL">Postać</div></a>

        </div>

        <div class="body-content">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>



