<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Norse War</title>
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/jquery-1.11.2.min.js"></script>
    <script src="~/Scripts/jqueryui-1.11.4.min.js"></script>
    <link href="~/Content/mojeStyle.css" rel="stylesheet" />

    <meta name="description" content="The description of my page" />
</head>
<body>

    <div id="container">
        <map name="adminClick">
            @*<area shape="rect" coords="281,31,291,40" href="~/AdminPanel">*@
            <area alt="area" shape="circle" coords="249,56,9" href="~/AdminPanel">
        </map>
        <div id="topbar">
            <div id="topbarL">
                @if (Session["User"] != null)
                {
                    var user = (NorseWar.Models.Account)Session["User"];
                   
                    <div>@user.Login</div>
                    <div>Doświadczenie: @user.Experience</div>
                    <div> 
                        @for (int i = 1; i< NorseWar.Helper.LevelTable.Level.Count() ; i++)
                        {
                            if (NorseWar.Helper.LevelTable.Level[i] > user.Experience)
                            {
                                int level = i - 1;
                                <form>Poziom: @level </form> 
                                break;
                            }
                        }
                    </div>
                    <div>
                        @user.Gold
                        <img src="~/Content/shiny-coin2.png" width="12" height="12" />
                    </div>
                }
            </div>
            <div id="topbarR">
                <center><img src="~/Content/logo2.png"  alt="Logo" usemap="#adminClick"></center>
            </div>
            <div style="clear:both"></div>
        </div>

        <div id="navigation-left-bar">

            @if (Session["User"] != null)
            {
                var user = (NorseWar.Models.Account)Session["User"];

                <ul>
                    @*<li><a href="">Home</a></li>*@
                    <li><a href="@Url.Action("Tavern", "User")">Karczma</a></li>
                    <li><a href="#">Warta</a></li>
                    <li><a href="@Url.Action("Arena", "User", new { id = 31 })">Arena</a></li>
                    <li><a href="#">Handlarz</a></li>
                    <li><a href="@Url.Action("YourMessages", "Messages")">Poczta</a></li>
                    <li><a href="@Url.Action("Details", "User", new { id = user.AccountID })">Postać</a></li>
                    <li><a href="@Url.Action("Index", "Rank")">Ranking</a></li>
                    <li><a href="@Url.Action("LogOut", "Panel")">Wyloguj</a></li>
                </ul>

            }
        </div>

        <div class="body-content">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>



