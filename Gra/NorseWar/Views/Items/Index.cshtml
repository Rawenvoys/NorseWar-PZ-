@model IEnumerable<NorseWar.Models.Item>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<p>
    @Html.ActionLink("Utwórz", "Create")
</p>
<table class="table">
    <tr>
        <th width="10%">
            Nazwa
        </th>
        <th>
            Str+
        </th>
        <th>
            Agi+
        </th>
        <th>
            Dex+
        </th>
        <th>
            Vit+
        </th>
        <th>
            Int+
        </th>
        <th>
            Luk+
        </th>
        <th>
            Typ
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td width="10%">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StrBonus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AgiBonus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DexBonus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VitBonus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IntBonus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LukBonus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.Id })  <br />
            @Html.ActionLink("Szczegóły", "Details", new { id=item.Id })  <br />
            @Html.ActionLink("Usuń", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
